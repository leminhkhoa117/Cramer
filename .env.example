# ===========================================
# CRAMER PROJECT - ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env to git!

# ---------------------------------
# SERVER CONFIGURATION
# ---------------------------------
SERVER_PORT=8080

# ---------------------------------
# SUPABASE DATABASE (PostgreSQL)
# ---------------------------------
# Full JDBC URL format: jdbc:postgresql://db.<project-ref>.supabase.co:5432/postgres?sslmode=require
# Replace [YOUR_PROJECT_REF] and [YOUR_PASSWORD] with your actual values
SPRING_DATASOURCE_URL=jdbc:postgresql://db.[YOUR_PROJECT_REF].supabase.co:5432/postgres?sslmode=require
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=[YOUR_PASSWORD]

# Connection pool settings (optional, has defaults)
SPRING_DATASOURCE_MAX_POOL_SIZE=10
SPRING_DATASOURCE_CONN_TIMEOUT=30000

# JPA/Hibernate settings
SPRING_JPA_HBM2DDL=update
SPRING_JPA_SHOW_SQL=false

# ---------------------------------
# SUPABASE REST API
# ---------------------------------
# Your Supabase project URL
SUPABASE_URL=https://your-project-ref.supabase.co/rest/v1

# Anon key (public, safe for client-side)
# Get from: Supabase Dashboard → Settings → API → anon/public key
SUPABASE_ANON_KEY=your-anon-key-here

# Service role key (KEEP SECRET! Server-side only, full admin access)
# Get from: Supabase Dashboard → Settings → API → service_role key
# WARNING: Never commit the real key to git!
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ---------------------------------
# OPTIONAL: DEBUG SETTINGS
# ---------------------------------
# Set to true only for local debugging with self-signed certificates
# NEVER use in production!
# SUPABASE_INSECURE_TLS=false
