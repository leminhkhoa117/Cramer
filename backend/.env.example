# Example environment variables for connecting this backend to Supabase
# Rename this file to .env and fill the values locally (DO NOT commit real secrets).

# Application
SERVER_PORT=8080

# Supabase Postgres connection
# You can either provide a full JDBC URL (recommended) that includes sslmode=require
# Example: jdbc:postgresql://db.<project>.supabase.co:5432/postgres?sslmode=require
SPRING_DATASOURCE_URL=jdbc:postgresql://db.<your-project>.supabase.co:5432/postgres?sslmode=require
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=your_db_password_here

# Connection pooling (optional)
SPRING_DATASOURCE_MAX_POOL_SIZE=10
SPRING_DATASOURCE_CONN_TIMEOUT=30000

# JPA
SPRING_JPA_HBM2DDL=update
SPRING_JPA_SHOW_SQL=false

# Supabase credentials (project-level) - useful if you need to call Supabase REST or Auth
# SUPABASE_URL=https://<your-project>.supabase.co
# SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
